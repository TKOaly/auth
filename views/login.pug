doctype html
html(lang="en")
  head
    title= "Login"
    link(rel='stylesheet', href='/styles/login.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    #container
      #menubar
        #logo-container
          img.img(src='/svg/tkoaly.svg')
        #title-container
          div#title Login
      #content
        if (loggedUser && logoutRedirect)
          h5='You are logged in as ' + loggedUser
          - let link = `/logout?serviceIdentifier=*&redirect=${logoutRedirect}`
          a(href=link fsty)='Destroy session'
        h4='Login to ' + service.displayName
        form(action='/login', method='POST')
          label(for='username')="Username"
          - let unameVal = loggedUser || '';
          input(required type='text', value=unameVal name='username', id='username' placeholder='Username')
          label(for='password')="Password"
          input(required type='password', name='password', id='password' placeholder='Password')
          input(type='hidden', name='serviceIdentifier', value=service.serviceIdentifier)
          input(type='hidden', name='loginRedirect', value=loginRedirect)
          input.accept(type='submit', name='accept', value='Login')