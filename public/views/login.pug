doctype html
html(lang="en")
  head
    title= Käyttöoikeuspyyntö
  body
    #container
      form(action='/api/auth/requestPermissions', method='POST')
        table
          tr
            td
              input(type='text', name='username', placeholder='Username')
          tr
            td
              input(type='password', name='password', placeholder='Password')
          tr
            td
              select(name='serviceIdentifier')
                each service in services
                  option(value=service.serviceIdentifier)
                    label=service.displayName
          tr
            td
              input.accept(type='submit', name='accept', value='Kirjaudu')