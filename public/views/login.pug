doctype html
html(lang="en")
  head
    title= "Login"
    link(rel='stylesheet', href='/styles/login.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    #container
      #menubar
        #logo-container
          img.img(src='/svg/tkoaly.svg')
        #title-container
          div#title Login
      #content
        if (loggedUser && redirect)
          h3='You are logged in as' + loggedUser
          - let link = `/logout?serviceIdentifier=*&redirect=${redirect}`
          a(href=link)='Destroy session'
        form(action='/api/auth/requestPermissions', method='POST')
          label(for='username')="Username"
          - let unameVal = loggedUser || '';
          input(type='text', value=unameVal name='username', id='username' placeholder='Username')
          label(for='password')="Password"
          input(type='password', name='password', id='password' placeholder='Password')
          input(type='hidden', name='serviceIdentifier', value=service.serviceIdentifier)
          input.accept(type='submit', name='accept', value='Login')