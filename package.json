{
  "name": "user-service",
  "description": "User service for TKO-äly",
  "authors": "TKO-äly ry",
  "contributors": [
    {
      "name": "Aleksi H."
    }
  ],
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node_modules/.bin/ts-node src/App.ts",
    "watch": "node_modules/.bin/nodemon start",
    "test": "node_modules/.bin/nyc node_modules/.bin/mocha",
    "create-uuid": "node_modules/.bin/ts-node scripts/create_uuid.ts",
    "generate-doc": "node_modules/.bin/typedoc --out ./doc/ src/**/*.ts",
    "migrate": "node_modules/.bin/knex migrate:latest",
    "rollback": "node_modules/.bin/knex migrate:rollback",
    "seed": "node_modules/.bin/knex seed:run",
    "lint": "node_modules/.bin/tslint -c tslint.json --project tsconfig.json",
    "fix-ts": "node_modules/.bin/tslint -c tslint.json --project tsconfig.json --fix",
    "build": "node_modules/.bin/tsc -p tsconfig.json"
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.0.0",
    "express": "4.16.3",
    "express-session": "^1.15.6",
    "helmet": "^3.11.0",
    "jsonwebtoken": "^8.2.1",
    "knex": "^0.15.0",
    "mysql2": "^1.5.3",
    "pug": "^2.0.3",
    "sha1": "^1.1.1",
    "typedoc": "^0.11.1",
    "validator": "^10.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.4",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.9",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/knex": "^0.14.15",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.5.1",
    "@types/sha1": "^1.1.1",
    "@types/uuid": "^3.4.3",
    "@types/validator": "^9.4.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "husky": "^1.0.0-rc.9",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "nyc": "^12.0.2",
    "sqlite3": "^4.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "uuid": "^3.2.1"
  },
  "engines": {
    "node": ">=8.9",
    "yarn": ">=1.6.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts",
      "scripts/**/*.ts",
      "src/controllers/IController.ts",
      "migrations/**/*.js",
      "migrations/**/*.ts",
      "seeds/**/*.js",
      "seeds/**/*.ts",
      "coverage/**/*.js",
      "**/*.js",
      "knexfile.ts",
      "src/App.ts"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  }
}
