  },
  "authors": "Hugo H.",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts",
      "scripts/**/*.ts",
      "src/controllers/IController.ts",
      "migrations/**/*.js",
      "seeds/**/*.js",
      "coverage/**/*.js",
      "**/*.js"
    ],
    "reporter": [
      "html",
      "json"
    ],
    "all": true
  }
