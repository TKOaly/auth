    "@types/sha1": "^1.1.1",
    "@types/uuid": "^3.4.3",
    "@types/validator": "^9.4.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "husky": "^1.0.0-rc.9",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "nyc": "^12.0.2",
    "sqlite3": "^4.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.2",
