    "helmet": "^3.12.1",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.14.3",
    "mysql2": "1.5.3",
    "pug": "^2.0.3",
    "sha1": "^1.1.1",
    "typedoc": "^0.11.1",
    "validator": "^10.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.4",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/helmet": "^0.0.38",
