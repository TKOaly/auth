{
  "name": "user-service",
  "description": "User service for TKO-äly",
  "authors": "TKO-äly ry",
  "contributors": [
    {
      "name": "Aleksi H."
    }
  ],
  "version": "0.9.0-dev",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/TKOaly/user-service#tko-%C3%A4ly-user-service",
  "bugs": "https://github.com/TKOaly/user-service/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/TKOaly/user-service"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch": "nodemon start",
    "test": "nyc mocha",
    "create-uuid": "ts-node scripts/create_uuid.ts",
    "generate-doc": "typedoc --ignoreCompilerErrors --out ./doc/ src/**/*.ts",
    "db:init": "ts-node scripts/create_databases.ts",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "fix-ts": "tslint -c tslint.json --project tsconfig.json --fix",
    "build": "tsc -p tsconfig.json",
    "build-docker": "docker build . -t user-service",
    "run-docker": "docker run -p 8080:8080 --env-file=.env -d --name user-service-container user-service"
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "dotenv": "^6.0.0",
    "express": "4.16.3",
    "express-mysql-session": "^2.0.1",
    "express-session": "^1.15.6",
    "helmet": "^3.11.0",
    "i18n": "^0.8.3",
    "jsonwebtoken": "^8.2.1",
    "knex": "0.14.6",
    "moment": "^2.22.2",
    "mysql": "^2.15.0",
    "mysql2": "^1.5.3",
    "node-sass-middleware": "^0.11.0",
    "pug": "^2.0.3",
    "raven": "^2.6.3",
    "secure-compare": "^3.0.1",
    "sha1": "^1.1.1",
    "typedoc": "^0.11.1",
    "validator": "^10.2.0"
  },
  "devDependencies": {
    "@types/express-mysql-session": "^1.2.2",
    "@types/bluebird": "^3.5.22",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.5",
    "@types/cookie-parser": "^1.4.1",
    "@types/csurf": "^1.9.35",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.9",
    "@types/helmet": "^0.0.42",
    "@types/i18n": "^0.8.3",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/knex": "^0.14.16",
    "@types/mocha": "^5.2.0",
    "@types/mysql": "^2.15.5",
    "@types/mysql2": "https://github.com/types/mysql2.git",
    "@types/node": "^10.5.1",
    "@types/node-sass-middleware": "^0.0.30",
    "@types/raven": "^2.5.1",
    "@types/selenium-webdriver": "^3.0.10",
    "@types/sha1": "^1.1.1",
    "@types/uuid": "^3.4.3",
    "@types/validator": "^9.4.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "husky": "^1.0.0-rc.9",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "nyc": "^12.0.2",
    "prettier": "^1.14.3",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "sqlite3": "^4.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.1",
    "uuid": "^3.2.1"
  },
  "engines": {
    "node": ">=8.9",
    "yarn": ">=1.6.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts",
      "scripts/**/*.ts",
      "src/controllers/IController.ts",
      "migrations/**/*.js",
      "migrations/**/*.ts",
      "seeds/**/*.js",
      "seeds/**/*.ts",
      "coverage/**/*.js",
      "**/*.js",
      "knexfile.ts",
      "src/App.ts",
      "src/index.ts",
      "src/i18n.config.ts",
      "node_modules"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  }
}
